<% @title = t '.title' %>
<h2><%= @title %></h2>

<%= form_for @log do |f| %>
  <div class="section">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div class="section">
    <%= f.label :items %>
    <%= render 'affected_items', items: @log.items %>
  </div>
  
  <%= f.submit %>
<% end %>
